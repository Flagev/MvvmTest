<Window x:Class="MvvmTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvvmTests"
        xmlns:vm="clr-namespace:MvvmTests.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Closed="Window_Closed"
        >

    <Window.Resources>
        <vm:MainWindowViewModel x:Key="MainWindowViewModel" />
    </Window.Resources>
    <!--
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext> 
    -->
    <WrapPanel DataContext="{StaticResource MainWindowViewModel}">
        <TextBox Name="X" Text="{Binding X, Mode=TwoWay}" Width="200" IsEnabled="True"/>
        <TextBox Name="Y" Text="{Binding Y, Mode=TwoWay}" Width="200"/>
        <TextBox Name="Z" Text="{Binding Z, Mode=TwoWay}" Width="200"/>
    </WrapPanel>
</Window>
